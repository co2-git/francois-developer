meta(charset='utf-8')

title(data-ng-bind='"/francois/ " + $state.current.name') /francois/

meta(name='viewport', content='width=device-width, initial-scale=1.0')

link(rel='env', content='' + env)
link(rel='version', content='' + about.version)

if env === 'development'
  link(rel='stylesheet', href='/dev/bower_components/bootstrap/docs/assets/css/bootstrap.css')
  link(rel='stylesheet', href='/dev/bower_components/bootstrap/docs/assets/css/bootstrap-responsive.css')
  link(rel='stylesheet', href='/dev/css/main.css')
else if env === 'production'
  link(rel='stylesheet', href='/app/vendor/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet', href='/app/vendor/bootstrap/css/bootstrap-responsive.min.css')
  link(rel='stylesheet', href='/app/css/main.min.css')

// Navigation bar
section.navbar.navbar-inverse.container
  div.navbar-inner
    div.container
      a.btn.btn-navbar( data-toggle='collapse', 
                        data-target='.nav-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.brand(href='/')
        span /francois/ 
        span(data-ng-bind='$state.current.name')
      // Navigation menu
      div.nav-collapse
        ul.nav
          li(data-ng-class="{ active: $state.includes('assets') }")
            a(href='/#/assets') Assets
          li.divider-vertical
          li(data-ng-class="{ active: $state.includes('projects') }")
            a(href='/#/projects') Projects
          li.divider-vertical
          li
            a(href='https://github.com/co2-git/francois-developer', target="_blank") Fork me on GitHub
          li.divider-vertical
        //
          ul.nav.pull-right
            li
              button.btn.btn-info(data-ng-click="goTo('hire-me')") hire me!

// Main content
section.container
  div(  data-ui-view='page', 
        data-ng-animate='{enter:"fade-enter"}')
    div.progress.progress-striped.active
      div.bar(style='width:40%')
    div.center.loading
      div.muted#loading-html5 Loading HTML5
      div.muted.hide#booting-up-app Booting up application
      div.muted.hide#loading-ng Loading Angular
      div.muted.hide#ready Ready to party

// footer
footer.container
  hr
  p.muted 
    span version 
    span(data-ng-bind="version")
  p
    a(href='https://github.com/co2-git/francois-developer', target="_blank") Fork me on GitHub

// Bootstrap error modal
section.modal.hide.fade#modal-error
  div.modal-header
    button.close(  type='button', data-dismiss='modal', aria-hidden='true') &times;
    h3 Oops!
  div.modal-body
    p An error occured!
  div.modal-footer
    a.btn(href='#',  data-dismiss='modal') Close

// Le Javascript
script.
  var $$$env = '#{env}';
  var $$$version = '#{about.version}';
if env === 'development'
  script(data-main='/dev/app/boot', src='dev/bower_components/requirejs/require.js')
else if env === 'production'
  script(data-main='/app/boot.min', src='/app/vendor/requirejs/js/requirejs.min.js')
